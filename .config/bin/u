set -l NOW (date +"%Y-%m-%d-%H-%M-%S")
echo -e "$NOW\n" >>/tmp/u-$NOW.txt

gum spin --spinner globe --title "ğŸ™ gh extensions upgrading..." --show-output -- gh extension upgrade --all >>/tmp/u-$NOW.txt
echo "\n" >>/tmp/u-$NOW.txt
echo "âœ… ğŸ™ gh extensions upgraded"

gum spin --spinner globe --title "ğŸªŸ tpm plugins updating..." --show-output -- ~/.config/tmux/plugins/tpm/bin/update_plugins all >>/tmp/u-$NOW.txt
echo "\n" >>/tmp/u-$NOW.txt
echo "âœ… ğŸªŸ tpm plugins updated"

gum spin --spinner globe --title "ğŸ  fisher plugins updating..." --show-output -- fisher update >>/tmp/u-$NOW.txt
echo "\n" >>/tmp/u-$NOW.txt
echo "âœ… ğŸ  fisher plugins updated"

gum spin --spinner globe --title "ğŸ’¤ lazy.nvim syncing..." -- nvim --headless "+Lazy! sync" +qa
