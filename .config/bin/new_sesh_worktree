#!/usr/bin/env bash
# cSpell:words worktree
cd ~/c/sesh
BRANCH=$(gum input --placeholder "New branch name")
echo "ğŸŒ³ Using branch '$BRANCH'"
REMOTE_BRANCH=$(git ls-remote --heads origin $BRANCH | wc -l)
if [ $REMOTE_BRANCH -eq 0 ]; then
	echo "â“â˜ï¸ Branch '$BRANCH' does not exist on remote, creating it"
	git worktree add ./$BRANCH
else
	echo "âœ…â˜ï¸ Branch '$BRANCH' exists on remote, using it"
	git worktree add ./$BRANCH origin/$BRANCH
fi

cd $BRANCH
go mod tidy
zoxide add $PWD
echo "ğŸ”— Connecting to session"
sesh connect .
